<Page x:Class="MetalMemory.InitializeGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MetalMemory"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="InitializeGame">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43.75*"/>
            <ColumnDefinition Width="56.25*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" x:Name="MemoryGrid">
            
        </Grid>
        <Grid Panel.ZIndex="1000" Grid.Column="0">
            <Frame x:Name="UserInterface"></Frame>
        </Grid>
        <StackPanel Width="200" Height="75" Margin="0,-135,0,0" Background="#FFDDDDDD">
            <Label>Amount of cards</Label>
            <RadioButton GroupName="RadioCards" Name="Cards16" IsChecked="True">16 Cards</RadioButton>
            <RadioButton GroupName="RadioCards" Name="Cards36">36 Cards</RadioButton>
            <RadioButton GroupName="RadioCards" Name="Cards64">64 Cards</RadioButton>
        </StackPanel>
        <Button Click="NewGame_Click" Width="200" Height="50">New Game</Button>
        <Button Click="LoadGame_Click" Width="200" Height="50" Margin="0,0,0,-110">Load</Button>
    </Grid>
</Page>
